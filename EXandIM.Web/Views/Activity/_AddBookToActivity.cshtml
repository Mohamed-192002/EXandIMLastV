@model AddToActivityViewModel

<form asp-action="AddBookToActivity"
      method="post"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showCustomErrorMessage"
      data-ajax-complete="onModalComplete"
      class="form">
    @if (Model?.Id > 0)
    {
        <input type="hidden" asp-for="Id" />
    }
    @if (Model?.BookIds != null)
    {
        @for (int i = 0; i < Model.BookIds.Count; i++)
        {
            <input type="hidden" name="bookIds[@i]" value="@Model.BookIds[i]" />
        }
    }

    <div class="mb-8">
        <label asp-for="ActivityId" class="form-label fw-semibold mb-2">
            <span class="required">السلسلة</span>
        </label>

        <select asp-for="ActivityId"
                asp-items="Model.Activities"
                class="form-select form-select-solid js-select2"
                style="height: 60px;"
                data-placeholder="اختار السلسلة">
            <option value="">اختار السلسلة</option>
        </select>

        <span asp-validation-for="ActivityId" class="text-danger d-block"></span>
    </div>

    <partial name="_ModalFooter" />
</form>
