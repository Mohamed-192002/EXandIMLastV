@using static EXandIM.Web.Controllers.FileEditorController
@model ViewFileResponse
@{
    ViewData["Title"] = "عرض الملف";
    Layout = "_Layout";
    var pageCount = ViewBag.PageCount ?? 1;
    var fileName = ViewBag.FileName ?? "file";
}

<div class="" style="margin-top: -30px;">
    <div class="card shadow-sm">
        <div class="card-body" style="padding: 0px;">
            <div class="row g-0" style="height: 900px;">
                <!-- عمود الأزرار -->
                <div class="col-md-3 col-lg-2">
                    <div class="d-flex flex-column justify-content-center align-items-center h-100 gap-3"
                         style="">
                        <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addImageModal">
                            <i class="bi bi-image"></i> إضافة صفحة
                        </button>
                        <button id="toggleDeleteSectionBtn" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteSectionModal">
                            <i class="bi bi-trash3"></i> حذف صفحة
                        </button>
                    </div>
                </div>
                <!-- عمود الملف -->
                <div class="col-md-9 col-lg-10">
                    <iframe id="fileIframe"
                            src="@($"{Model.FileUrl}?v={DateTime.Now.Ticks}")"
                            width="100%"
                            height="900px"
                            frameborder="0"
                            style="border: none; display: block;">
                    </iframe>
                </div>
            </div>
        </div>

        <!-- Modal قائمة الحذف -->
        <div class="modal fade" id="deleteSectionModal" tabindex="-1" aria-labelledby="deleteSectionModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered modal-lg">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteSectionModalLabel">احذف أي صفحة من الملف</h5>
                    </div>
                    <div class="modal-body text-center">
                        <div class="d-flex flex-wrap justify-content-center gap-2">
                            @for (int i = 1; i <= pageCount; i++)
                            {
                                <button type="button"
                                        class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-page="@i">
                                    حذف الصفحة @i
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
<!-- Modal إضافة صورة -->
<div class="modal fade" id="addImageModal" tabindex="-1" aria-labelledby="addImageModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form asp-action="AddImageToPage" method="post" enctype="multipart/form-data" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addImageModalLabel">إضافة صوره او ملف إلى صفحة</h5>
            </div>
            <div class="modal-body">
                <input type="hidden" name="fileUrl" value="@Model.FileUrl" />
                <div class="mb-3">
                    <label>رقم الصفحة : </label>
                    <input type="number" name="pageNumber" min="1" max="@pageCount" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label>اختر صوره او ملف : </label>
                    <input type="file" name="imageFile" class="form-control" accept="image/*,application/pdf" required />

                </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">إضافة</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
            </div>
        </form>
    </div>
</div>
<!-- Modal حذف -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <form id="deleteForm" method="post" asp-action="RemovePageAndRedirect" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">تأكيد حذف الصفحة</h5>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد أنك تريد حذف الصفحة رقم  <strong id="deletePageNumberDisplay"></strong> ؟</p>
                <input type="hidden" name="fileUrl" value="@Model.FileUrl" />
                <input type="hidden" name="pageNumber" id="deletePageNumber" />
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-danger">نعم، احذف</button>
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إلغاء</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
          const deleteModal = document.getElementById('deleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            const button = event.relatedTarget;
            const page = button.getAttribute('data-page');
            document.getElementById('deletePageNumber').value = page;
            document.getElementById('deletePageNumberDisplay').textContent = page;
        });

     
    </script>
}
